<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/sp_15"
    tools:context=".view.activitys.index.MyTaskActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/sp_15"
        android:text="吉他课" />

    <TextView
        android:id="@+id/className"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sp_15"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_toRightOf="@+id/name"
        android:text="练习课程1"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/className"
        android:layout_marginStart="@dimen/sp_15"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_toRightOf="@+id/name"
        android:text="练习课程1"
        android:textColor="@color/gay"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_marginStart="@dimen/sp_15"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_toRightOf="@+id/name"
        android:text="1212222222222222222222"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/tvSelect"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp_20"
        android:layout_below="@+id/tv"
        android:layout_marginEnd="@dimen/sp_20"
        android:gravity="right"
        android:text="展开"
        android:textColor="#0079e2"
        android:textSize="@dimen/sp_15"
        tools:ignore="RtlHardcoded" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:layout_below="@+id/tvSelect"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginEnd="@dimen/sp_20"
        android:layout_toRightOf="@+id/name"
        android:background="@color/gay" />
</RelativeLayout>