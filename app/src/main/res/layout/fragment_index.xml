<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <include layout="@layout/index_bar" />

    <com.stx.xhb.androidx.XBanner
        android:id="@+id/xBanner"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@+id/commFragmentBar"
        android:layout_marginStart="@dimen/size_15"
        android:layout_marginEnd="@dimen/size_15" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/xBanner"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/dp_10">

                <TextView
                    android:id="@+id/myTask"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_launcher_background"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="我的作业"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/withdraw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_launcher_background"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="教学曲库"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/assets"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_launcher_background"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="线下作业"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_launcher_background"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="机构介绍"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_launcher_background"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="以上课程"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_launcher_background"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="上课流程"
                    android:textColor="@color/black" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_120"
                android:layout_marginStart="@dimen/size_15"
                android:layout_marginEnd="@dimen/size_15"
                android:background="@drawable/login_btn" />

            <RelativeLayout
                android:id="@+id/llVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_15"
                android:layout_marginTop="@dimen/size_15"
                android:layout_marginEnd="@dimen/size_15"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名师天地"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/moreVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:drawablePadding="@dimen/size_8"
                    android:text="更多" />
            </RelativeLayout>

            <View
                android:id="@+id/view_line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/size_15" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvClass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_index" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>