<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:padding="@dimen/size_10">

    <ImageView
        android:id="@+id/classImg"
        android:layout_width="@dimen/size_104"
        android:layout_height="@dimen/size_104"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="10dp"
        android:background="@color/index"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/classImg"
        android:layout_marginStart="@dimen/size_18"
        android:layout_toEndOf="@+id/classImg"
        android:text="名称"
        android:textColor="@color/yellow"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/classImg"
        android:layout_marginStart="@dimen/size_18"
        android:layout_toEndOf="@+id/type"
        android:text="课程名称"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/stdNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/classImg"
        android:layout_marginStart="@dimen/size_18"
        android:layout_marginTop="@dimen/size_18"
        android:layout_toEndOf="@+id/classImg"
        android:drawablePadding="@dimen/size_10"
        android:text="123123"
        android:textSize="@dimen/sp_12"
        app:drawableStartCompat="@drawable/msg_icon" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/classImg"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/size_18"
        android:layout_marginTop="@dimen/size_18"
        android:drawablePadding="@dimen/size_10"
        android:text="09月25日-11月30日"
        android:textSize="@dimen/sp_12" />


</RelativeLayout>