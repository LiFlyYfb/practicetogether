<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/size_10">


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/classNum"
        android:layout_marginStart="@dimen/size_15"
        android:text="12月10号田阔老师上课名称"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignBottom="@+id/classNum"
        android:layout_marginStart="@dimen/size_15"
        android:layout_marginTop="@dimen/size_18"
        android:drawablePadding="@dimen/size_10"
        android:text="123123"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/cls"
        android:layout_width="@dimen/size_60"
        android:layout_height="@dimen/size_30"
        android:layout_alignBottom="@+id/classNum"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/size_18"
        android:layout_marginTop="@dimen/size_18"
        android:background="@drawable/login_btn"
        android:drawablePadding="@dimen/size_10"
        android:gravity="center"
        android:padding="@dimen/size_5"
        android:text="进入教室"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:layout_below="@+id/cls"
        android:layout_marginStart="@dimen/size_15"
        android:layout_marginTop="@dimen/size_15"
        android:layout_marginEnd="@dimen/size_15"
        android:background="@color/gay" />

</RelativeLayout>